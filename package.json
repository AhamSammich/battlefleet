{
  "name": "ts-battlefleet",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "test": "jest",
    "start": "node app.js",
    "dev": "nodemon app.js",
    "hmr": "vite",
    "dev-server": "npm-run-all -p dev hmr",
    "build-only": "vue-tsc --noEmit && vite build",
    "move-assets": "mv dist/favicon.ico dist/assets/",
    "build": "npm-run-all build-only move-assets",
    "preview": "npm-run-all build dev",
    "image-push": "heroku container:push web -a battlefleet",
    "image-release": "heroku container:release web -a battlefleet",
    "deploy": "npm-run-all image-push image-release"
  },
  "dependencies": {
    "express": "^4.18.1",
    "socket.io": "^4.5.1",
    "socket.io-client": "^4.5.1",
    "vue": "^3.2.25"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@vitejs/plugin-vue": "^2.3.3",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^28.0.7",
    "typescript": "^4.5.4",
    "vite": "^2.9.9",
    "vue-tsc": "^0.34.17"
  }
}
