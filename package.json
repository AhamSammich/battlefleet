{
  "name": "ts-battlefleet",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "test": "jest",
    "start": "node dist/server/app.js",
    "dev": "nodemon app.ts",
    "hmr": "vite",
    "dev-server": "npm-run-all -p dev hmr",
    "preview": "npm-run-all build start",
    "compile": "cd server && tsc && cd ..",
    "build-only": "npm run compile && vue-tsc --noEmit && vite build",
    "build-image": "build && docker build -t battlefleet:latest .",
    "build": "npm-run-all build-only move-assets",
    "image": "docker build .",
    "move-assets": "mv dist/favicon.ico dist/assets/",
    "image-push": "heroku container:push web -a battlefleet",
    "image-release": "heroku container:release web -a battlefleet",
    "deploy": "npm-run-all image-push image-release"
  },
  "dependencies": {
    "express": "^4.18.1",
    "socket.io": "^4.5.1",
    "socket.io-client": "^4.5.1",
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@vitejs/plugin-vue": "^3.0.3",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4",
    "vite": "^3.0.7",
    "vue-tsc": "^0.40.1"
  }
}
